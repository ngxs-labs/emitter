{
  "name": "emitter",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngxs-labs/emitter.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/ngxs-labs/emitter#readme",
  "bugs": {
    "url": "https://github.com/ngxs-labs/emitter/issues"
  },
  "keywords": [
    "ngxs",
    "redux",
    "store"
  ],
  "scripts": {
    "postinstall": "ngcc && husky install",
    "ng": "ng",
    "start": "ng serve",
    "lint": "ng lint",
    "build": "ng build",
    "postbuild": "cpy README.md dist/emitter",
    "test": "ng test --run-in-band --silent"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^12.2.1",
    "@angular/compiler": "^12.2.1",
    "@angular/core": "^12.2.1",
    "@angular/platform-browser": "^12.2.1",
    "@angular/platform-browser-dynamic": "^12.2.1",
    "@ngxs/store": "^3.7.2",
    "rxjs": "^7.3.0",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "^12.0.0",
    "@angular-devkit/build-angular": "~12.0.3",
    "@angular/cli": "^12.0.3",
    "@angular/compiler-cli": "^12.0.3",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.17.1",
    "codelyzer": "^6.0.2",
    "cpy-cli": "^3.1.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.1.2",
    "ng-packagr": "^12.2.0",
    "prettier": "^2.3.2",
    "ts-node": "^8.10.2",
    "tslint": "~6.1.3",
    "typescript": "4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "tabWidth": 2,
    "printWidth": 100,
    "trailingComma": "none",
    "bracketSpacing": true,
    "singleQuote": true
  }
}
